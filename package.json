{
  "name": "container-farm-game",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "typecheck": "npx tsc --noEmit",
    "build": "npx tsc --noEmit && vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:unit:watch": "vitest",
    "chromatic": "npx chromatic --exit-zero-on-changes",
    "verify": "./scripts/verify.sh",
    "smoke": "npx tsx scripts/smoke-test.ts",
    "verify:quick": "./scripts/verify.sh --quick"
  },
  "dependencies": {
    "howler": "^2.2.4",
    "pixi.js": "^8.16.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.1",
    "@playwright/test": "^1.58.2",
    "@storybook/addon-a11y": "^10.2.10",
    "@storybook/addon-docs": "^10.2.10",
    "@storybook/addon-onboarding": "^10.2.10",
    "@storybook/addon-vitest": "^10.2.10",
    "@storybook/react-vite": "^10.2.10",
    "@types/howler": "^2.2.12",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "chromatic": "^15.1.1",
    "husky": "^9.1.7",
    "playwright": "^1.58.2",
    "storybook": "^10.2.10",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  },
  "description": "A container herb farming simulation game built as a single React component. Breed plants, optimize genetics, manage your shelf, and sell at the weekly farmers market.",
  "main": "tests.js",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfuechec/container-farm-game.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mfuechec/container-farm-game/issues"
  },
  "homepage": "https://github.com/mfuechec/container-farm-game#readme"
}
